<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .navbar-brand {
            color: white !important
        }

        .navbar-brand:visited {
            color: white !important
        }

        .navbar-default-color {
            color: white !important
        }

        .navbar-inverse {
            color: white !important
        }
        .logo {
            font-size: 70px;
            color: #006Ec7;
        }
    </style>
    <link rel="stylesheet" type="text/css" href="~/Content/jssocials.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/jssocials-theme-classic.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/font-awesome.css" />
    @RenderSection("styles", required: false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container" >
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Neal Services, Inc", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse" >
                <ul class="nav navbar-nav" >
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li><a href="tel:3304979699">Call Now! 330-497-9699</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid body-content">
        <div class="container">
            <div class="row">
                <div class="sub-banner" style="height: 20vh">
                    <div class="col-md-4" style="text-align: center;">
                        <img class="center-block" src="~/Images/CC_Logo_Horz_050216083247_lowres.png" style="height: 18vh; margin: auto; padding-top: 2px;" />
                        <div id="share"></div>
                    </div>
                    <div class="col-md-4">
                        <img class="center-block" src="~/Images/Capture.JPG" style="height: 25vh; margin: auto;" />
                    </div>
                    <div class="col-md-4 phonenum">
                        <h1 style="font-family: 'Exo BlackItalic'">
                            - Since 1949 -
                        </h1>
                        <img class="center-block" src="~/Images/bwlogo.png" style="height: 10vh; padding-top: 10px; margin-top: 5px;" />
                    </div>
                </div>
            </div>
        </div>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; Neal Services, Inc HVAC & Refrigeration </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)
    <script src="~/Scripts/jssocials.min.js"></script>
    <script>
        $("#share").jsSocials({
            shares: ["email", "facebook", "googleplus"]
        });
    </script>
</body>
</html>
